<%- include("header") -%>
  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% newListItems.forEach(function(item){ %>
      <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="Checkbox" value="<%=item._id %>" onChange="this.form.submit()">
        <p><%=  item.name  %></p>
      </div>
      <input type="hidden" name="listName" value="<%= listTitle%>"></input>
      </form>
      <% }) %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button class="plusptn"type="submit" name="list" value="<%= listTitle %>">+</button>
      </form>
  </div>
  <div class="box list">
    <form class="item" action="/newList" method="post">
      <input class="listinput" type="text" name="NewList" placeholder="List Name" autocomplete="off">
      <button class="Listbutton btn1"type="submit" >Change List</button>
      <button class="Listbutton btn2"type="submit" name="homeButton" value="Home">Home List</button>
    </form>
  </div>

<%- include("footer") -%>
